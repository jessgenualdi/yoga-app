<div class="container col-md-12" id="gradient">
    <h1 class="textCenter">Yoga Poses</h1>
    <% @poses.each do |pose| %>
      <div class="col-md-4">
        <a href="/pose/<%= pose.id %>">
          <h4><%= pose.name %></h4>
          <p><%= pose.sanskrit_name %></p>
          <img style="padding-bottom:40px;" width="300" src="<%= pose.image %>" />
        </a>
      </div>
    <% end %>
</div>





<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>